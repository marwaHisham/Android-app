<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64ffda"
    tools:context="com.example.marwa.androidproject.details">

    <TextView
        android:id="@+id/name"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/done"
        android:layout_alignBottom="@+id/done"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:fontFamily="serif"
        android:scrollbarStyle="outsideInset"
        android:text="TextView"
        android:textColor="#00695c"
        android:textColorLink="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/date"
        android:layout_marginTop="29dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textColor="#00bfa5"
        android:textColorLink="@android:color/white"
        android:textSize="18sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/note"
        android:layout_alignStart="@+id/note"
        android:layout_below="@+id/name"
        android:layout_marginTop="28dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textColor="#00bfa5"
        android:textColorLink="@android:color/white"
        android:textSize="18sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/note"
        android:layout_alignStart="@+id/note"
        android:layout_below="@+id/note"
        android:layout_marginTop="31dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textColor="#00bfa5"
        android:textColorLink="@android:color/white"
        android:textSize="18sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/end"
        android:layout_marginTop="46dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textColor="#00bfa5"
        android:textColorLink="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/end"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="42dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textColor="#00bfa5"
        android:textColorLink="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/delete"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_menu_edit"
        android:fontFamily="serif" />

    <Button
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@android:drawable/ic_menu_delete"
        android:fontFamily="serif" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:background="@android:drawable/ic_media_play"
        android:fontFamily="serif" />

    <CheckBox
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Done"
        android:textColor="#00695c"
        android:textColorLink="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

</RelativeLayout>
